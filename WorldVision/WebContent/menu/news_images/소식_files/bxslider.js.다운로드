$(document).ready(function(){
    // 메인 왼쪽 배너
    $('.sliderTwo').bxSlider({
        auto:true,
        stopAutoOnClick:true,
        pause:4000,   
        pager:false,
    });

    // 메인 오른쪽 배너
    $('.kidList').bxSlider({
        auto:true,
        stopAutoOnClick:true,
        pause:3000,   
        pager:false,
    });
   
    // 캠페인 탑배너
    $('.slider').bxSlider({
        minSlides:2,
        maxSlides:2,
        slideWidth:410,
        slideMargin:30,
        pager:false,
        auto:true,
        stopAutoOnClick:true,
        pause:3000,    
    });


    // 소식 탑배너
    $('.story').bxSlider({
        minSlides:2,
        maxSlides:2,
        slideWidth:400,
        slideMargin:30,
        pager:false,
        auto:true,
        stopAutoOnClick:true,
        pause:3000,    
    });
  


});